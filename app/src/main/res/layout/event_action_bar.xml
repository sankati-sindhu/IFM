<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:theme="@style/AppTheme.AppBarOverlay">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/detail_toolbar"
        android:layout_width="match_parent"
        android:background="@color/saffron_50"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:layout_height="?attr/actionBarSize"
        >
        <!--TODO: menu here-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:orientation="horizontal">
           <!-- <ImageView
                android:id="@+id/eventTextIncrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_sizeincrease"
                android:layout_marginRight="@dimen/large_margin"
                android:layout_marginEnd="@dimen/large_margin"


                />-->
           <!-- <ImageView
                android:id="@+id/eventTextDecrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_format_size_24"
                android:layout_marginRight="@dimen/large_margin"
                android:layout_marginEnd="@dimen/large_margin"
                />-->
            <TextView
                android:id="@+id/eventTextIncrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A+"
                style="@style/TextAppearance.AppCompat.Button"
                android:textSize="@dimen/text_size_1"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/large_margin"
                android:layout_marginEnd="@dimen/large_margin"
                />

            <TextView
                android:id="@+id/eventTextDecrease"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A-"
                style="@style/TextAppearance.AppCompat.Button"
                android:textSize="@dimen/text_size_1"
                android:textStyle="bold"
                android:layout_marginRight="@dimen/large_margin"
                android:layout_marginEnd="@dimen/large_margin"
                />

            <ImageView
                android:id="@+id/eventBookmark"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/large_margin"

                android:layout_marginEnd="@dimen/large_margin"
                android:src="@drawable/ic_baseline_bookmark_24"/>


        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>



</com.google.android.material.appbar.AppBarLayout>

